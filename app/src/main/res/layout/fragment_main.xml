<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_chuck_norris"
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:contentDescription="@string/chuck_norris"
        android:scaleType="centerCrop"
        android:src="@drawable/norris" />

    <TextView
        android:id="@+id/joke_value"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/double_margin"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        tools:text="@string/dummy_joke" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/whatsapp_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_whatsapp_black"
            android:backgroundTint="@android:color/white"
            android:contentDescription="@string/share_whatsapp" />

        <ImageButton
            android:id="@+id/insta_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/double_margin"
            android:background="@drawable/ic_instagram"
            android:backgroundTint="@android:color/white"
            android:contentDescription="@string/share_whatsapp" />

    </LinearLayout>


</LinearLayout>

